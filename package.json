{
  "name": "chrome-permissions-events-polyfill",
  "version": "1.0.0",
  "description": "WebExtensions: Polyfill for permissions.onAdded and permissions.onRemoved events for Firefox.",
  "license": "MIT",
  "repository": "bfred-it/chrome-permissions-events-polyfill",
  "author": "Federico Brigante <github@bfred.it> (bfred.it)",
  "keywords": [
    "permissions",
    "events",
    "content",
    "scripts",
    "browser",
    "extension",
    "webext",
    "web-ext"
  ],
  "files": [
    "index.js"
  ],
  "scripts": {
    "test-manually": "parcel watch tests/*.js --out-dir tests/built --no-hmr",
    "test": "xo && tsc --noEmit",
    "prepublishOnly": "tsc",
    "build": "tsc",
    "watch": "tsc --watch"
  },
  "xo": {
    "extensions": [
      "ts"
    ],
    "envs": [
      "browser",
      "webextensions"
    ],
    "overrides": [
      {
        "files": "**/*.ts",
        "extends": "xo-typescript"
      }
    ]
  },
  "devDependencies": {
    "@sindresorhus/tsconfig": "^0.4.0",
    "@types/chrome": "0.0.86",
    "@types/firefox-webext-browser": "^67.0.2",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.11.0",
    "eslint-config-xo-typescript": "^0.15.0",
    "parcel-bundler": "^1.12.3",
    "tape": "^4.11.0",
    "tape-promise": "^4.0.0",
    "typescript": "^3.6.0-dev.20190701",
    "webextension-polyfill": "^0.4.0",
    "xo": "*"
  },
  "browserslist": [
    "last 1 Chrome versions"
  ]
}
